{% extends './base.html.twig' %}

{% set error = getFlashBag("error") %}
{% set info = getFlashBag("info") %}

{% block body %}

  {% block header %}
    {{ render( controller("app:app:header" )) }}
  {% endblock %}

  <div class="container text-center mt-8">
    <div class="row justify-content-center nodefony">
      <div class="col-md-12">
        {% if info %}
        <div class="alert alert-primary alert-dismissible fade show mt-2" role="alert">
          <strong>INFO :</strong> {{info|escape}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

        {% endif %}
        {% if error %}
        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
          <strong>INFO :</strong> {{error|escape}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {% endif %}
        <img class="mb-4" src="{{CDN('image')}}/app/images/app-logo.png" alt="">
        <h1>
          {% filter upper %}
            {{nodefony.name|escape}}
          {% endfilter %}
        </h1>
        <p>{{description|escape}}</p>
        <p class="h2 mt-3">
          {{trans("welcome")}}
        </p>
        <p class="h2 mt-3 mb-5">
          {{user.name|escape}}
          {{user.surname|escape}}
        </p>
        <p class="h2 mt-3 mb-5">
          <a href="{{url('nodefony-user')}}" class="btn btn-secondary" tabindex="-1" role="button">
            {{"users"|trans}}
          </a>
        </p>
      </div>
    </div>
  </div>

  {% block footer %}
    {{ render( controller("app:app:footer" )) }}
  {% endblock %}

{% endblock %}
