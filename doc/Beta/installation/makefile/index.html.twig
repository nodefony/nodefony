	@echo "#########################################" ;
	@echo "#            NODEFONY INSTALL           #" ;
	@echo "#########################################" ;
	@echo "";

	@if [ $(VERBOSE) = 0 ] ; then \
		echo "./console npm:install";\
		./console npm:install ;\
	else \
		echo "./.console_dev npm:install";\
		./.console_dev npm:install ;\
	fi \

	@echo "";
	@echo "#########################################" ;
	@echo "#        NODEFONY ASSETS INSTALL        #" ;
	@echo "#########################################" ;
	@echo "";
	@if [ $(VERBOSE) = 0 ] ; then \
		echo "./console assets:install" ;\
		./console assets:install ;\
	else \
