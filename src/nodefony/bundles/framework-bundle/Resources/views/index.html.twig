{% extends "/app/Resources/views/base.html.twig" %}
{% block body %}
  <div class="container">
    {% block header %}
      {{ render( controller("framework:default:header" )) }}
    {% endblock %}
    {% block content %}{% endblock %}
    {% block footer %}
      {{ render( controller("framework:default:footer" )) }}
    {% endblock %}
  </div>
{% endblock %}
{% block stylesheets %}
  <link href="/framework-bundle/assets/css/framework.css" rel="stylesheet" media="screen">
{% endblock %}

{% block javascripts %}
  <script type="text/javascript" src="/framework-bundle/assets/js/framework.js"></script>
{% endblock %}
