{% extends './layout.html.twig' %}
{{trans_default_domain("login")}}

{% block title %}{{trans("login")}}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <!-- WEBPACK BUNDLE -->
  <link rel='stylesheet' href='{{CDN("stylesheet")}}/security-bundle/assets/css/login.css'/>
{% endblock %}

{% block content %}

    <div class="container" style="margin-top:100px">
        <div class="col text-center">
          <img src='{{CDN("image")}}/app/images/app-logo.png'/>
          <strong class="display-3" style="color:#0167b8;">
            NODEFONY {{trans("security")}}
          </strong>
          <div class="login-block">
            <h1>{{trans("login")}} {{type}}</h1>
            <form id="login" action="{{ckeckLogin}}" method="POST">
              <input type="text" value="" placeholder="Username" id="username" name="username"/>
              <input type="password" value="" placeholder="Password" id="passwd" name="passwd"/>
              <button>{{trans("submit")}}</button>
            </form>
          </div>
        </div>
      </div>
    </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- WEBPACK BUNDLE -->
  <script src='{{CDN("javascript")}}/security-bundle/assets/js/login.js'></script>
{% endblock %}
