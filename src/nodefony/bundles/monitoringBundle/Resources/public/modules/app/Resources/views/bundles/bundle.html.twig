{% set  subtitle %}
	<p >Name	: {{ name }} &nbsp; &nbsp; &nbsp; 
	    Locale	: {{locale}} &nbsp; &nbsp; &nbsp;
	    Version	: {{version}} &nbsp; &nbsp; &nbsp;
	</p>
{% endset %}
{% set  title %}

	<h3> DESCRIPTIONS BUNDLE {{bundleName| upper}} </h3>

{% endset %}


{% include '../blocks/title.html.twig' with { 'title':title , 'subtitle': subtitle } %}


<div class="container-fluid">

	<div class="row m-t-10">

		<div class="col-md-3 ">
			
			<ul id="myNav" class="nav nav-list ">
				<li class="active" ><a  data-target="#config" data-toggle="tab" >Configuration</a></li>
				<li><a data-target="#routing"  data-toggle="tab"  > routing</a></li>	
				<li><a data-target="#views" data-toggle="tab" > views</a></li>
				<li><a data-target="#entities" data-toggle="tab" > entities</a></li>
				<li><a data-target="#events" data-toggle="tab" > Events</a></li>
				<li><a data-target="#files" data-toggle="tab" > Ressources</a></li>
			</ul>

		</div >


		<div class="col-md-9 " >


			<div class="tab-content">

				<div id="config" class="tab-pane active ">
  					<button stage-click="$('#json').JSONView('expand')" class="btn btn-primary btn-sm" id="expand-btn">Expand</button>
					<button stage-click="$('#json').JSONView('collapse')" class="btn btn-primary btn-sm" id="collapse-btn">Collapse</button>
  					<button stage-click="$('#json').JSONView('toggle')" class="btn btn-primary btn-sm" id="toggle-btn">Toggle</button>
  					<button stage-click="$('#json').JSONView('toggle',1)" class="btn btn-primary btn-sm" id="toggle-level1-btn">Toggle level1</button>
  					<button stage-click="$('#json').JSONView('toggle',2)" class="btn btn-primary btn-sm" id="toggle-level2-btn">Toggle level2</button>    
					<div id="json"></div>
				</div>


				<div id="routing" class="tab-pane ">
					<div class="wrapper" >
						<div class="table-responsive"  >
							<table id="tableRouting" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>ROUTE NAME</th>
										<th>PATH</th>
										<th>HOST</th>
										<th>VARIABLES</th>
										<th>CONTROLLER ACTION</th>
										<th>REQUIREMENTS METHOD</th>
									</tr>
								</thead>
								<tbody>
								{% for route in routing %}
								<tr>
									<td>{{route.name}}</td>
									<td><a href={{route.path}}>{{route.path}}</a></td>
									<td>{{route.host}}</td>
									<td>{{route.variables}}</td>
									<td>{{route.defaults.controller}}</td>
									<td>{{route.requirements.method}}</td>
								</tr>
								{% endfor %}
								</tbody>
							</table>
						</div>
					</div>

				</div>

				<div id="views" class="tab-pane ">
					<div class="wrapper" >
						<div class="table-responsive"  >
							<table id="viewTable" class="table table-striped table-bordered display" cellspacing="0" width="100%">
        							<thead>
            								<tr>
                								<th></th>
                								<th>Directory</th>
                								<th>NB view</th>
                								<th>Size</th>
            								</tr>
        							</thead>
        							
    							</table>
						</div>
					</div>

				</div>

				<div id="entities" class="tab-pane ">
				</div>

				<div id="events" class="tab-pane ">
				</div>

				<div id="files" class="tab-pane ">
					<div id="config" class="tab-pane active ">
  						<button stage-click="$('#filesData').JSONView('expand')" class="btn btn-primary btn-sm" id="expand-btn">Expand</button>
						<button stage-click="$('#filesData').JSONView('collapse')" class="btn btn-primary btn-sm" id="collapse-btn">Collapse</button>
  						<button stage-click="$('#filesData').JSONView('toggle')" class="btn btn-primary btn-sm" id="toggle-btn">Toggle</button>
  						<button stage-click="$('#filesData').JSONView('toggle',1)" class="btn btn-primary btn-sm" id="toggle-level1-btn">Toggle level1</button>
  						<button stage-click="$('#filesData').JSONView('toggle',2)" class="btn btn-primary btn-sm" id="toggle-level2-btn">Toggle level2</button>    
						<div id="filesData"></div>
					</div>

	
				</div>

		
			</div>

		<div>

	<div>
<div>
