{% extends "./licence.cecill-b.skeleton" %}

{% block body %}

module.exports = nodefony.registerController("{{controllerShortName}}", function(){

		/**
		 *	The class is a **`{{controllerName}}` CONTROLLER** .
		 *	@module {{module}}
		 *	@main {{module}}
		 *	@class {{controllerName}}
		 *	@constructor
		 *	@param {class} container
		 *	@param {class} context
		 *
		 */
		const {{controllerName}} = class {{controllerName}} extends nodefony.controller {

			constructor (container, context){
				super(container, context);
			}

			/**
		 	*
		 	*	@method indexAction
		 	*
		 	*/
			indexAction (){
				try {
					return this.render("{{bundleName}}:{{directory}}:index.html.twig",{name:"{{controllerShortName}}"});
				}catch(e){
					throw e;
				}
			}
		};
		return {{controllerName}};
});
{% endblock %}
