########## {{projectName}} CONFIG BUNDLE  {{ bundleName }}  ############
name :				{{ bundleName }}
version:			"1.0"
locale :			{{ local }}

#
#  WATCHERS
#    
#    watchers Listen to changes, deletion, renaming of files and directories 
#    of different components
#       
#    For watch all components 
# 
#      watch:			true
#    or 
#      watch:
#        controller:		true
#        config:                true		# only  routing.yml
#        views:			true
#        translations:          true
#
watch:				true

#
#  WEBPACK CONFIG       
#
webpack:
  entry:
    main:                       "./js/{{ name }}.js"
  watch:                        true
  devtool:                      "source-map"
  output:
    filename:                   "./assets/js/{{ name }}.js"
    library:                    "{{ name }}"
    libraryTarget:              "umd"

