{% extends "./layout.html.twig" %}
{% block bodyContent %}
 	<div class="col-lg-12">
		<div class="jumbotron bg-danger m-t-xxl">
			{% if message  or exception %}
                {% if  exception %}
				            <h1 class="text-shadow m-b-lg">ERROR 404 - {{  exception.message or  "Not Found !" }}</h1>
                {% else %}
                    <h1 class="text-shadow m-b-lg">ERROR 404 - {{  message or "Not Found !"  }}</h1>
                {% endif %}
			{% else %}
				<h1 class="text-shadow m-b-lg">ERROR 404 - Not Found !</h1>
			{% endif %}

			<p>The requested URL  : <b style="font-size: 20px"></b> </p>
			<p><pre>{{ url }} {{ status }} </pre></p>
		</div>
	</div>
{% endblock %}
