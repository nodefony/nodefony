
{% extends '/app/Resources/views/base.html.twig' %}


{{trans_default_domain("login")}}

{% block title %}  LDAP {% endblock %}

{% block stylesheets %}
	<!-- WEBPACK BUNDLE -->
	<link rel='stylesheet' href='{{CDN("stylesheet")}}/jfoBundle/assets/css/jfo.css' />
{% endblock %}

{% block body %}
	{{ parent() }}

	<section id="loginSection" class=" pfblock-gray screen-height ">
		{% if error %}
			<div id="error">{{error}}</div>
		{% endif %}
		<div class="container">
			<div class="row">
				
				<h1 class="wrapper strong text-center"><a class=" text-primary" href="{{path("home")}}"  ><strong class="text-primary"> PROJET SERIAL </strong></a> </h1>
				<h4 class="block text-center text-primary ">{{ "loginMessage"|trans() }} LDAP EFIXO</h4>
				<div class="col-sm-6 col-md-4 col-md-offset-4">
					<div class="account-wall">
						<div id="my-tab-content" class="tab-content">
							<div class="tab-pane active" id="homelogin">
								<img class="profile-img" src="/jfoBundle/images/user.png" alt=""/>
               							<form  id="login" class="form-signin" action="{{path('telnet-dashboard')}}" method="POST">
               								<input id="email" name="email" type="text" class="form-control"  placeholder="{{"user"|trans}}" required autofocus>
               								<input id="passwd" name="passwd" type="password" class="form-control" placeholder="{{"pwd"|trans}}" required>
               								<input id="valid" type="submit" class="btn btn-lg btn-default btn-block" value={{"validation"|trans}} />
               							</form>
              						</div>
              					</div>
					</div>
				</div>
			</div>
		</div>
	</section>


{% endblock %}
