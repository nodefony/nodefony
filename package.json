{
  "name": "nodefony-core",
  "version": "7.0.1",
  "description": "Core Nodefony Node.js Web Framework",
  "main": "./src/nodefony/core/autoloader.es6",
  "scripts": {
    "nodefony": "node src/nodefony/bin/nodefony",
    "pm2": "node src/nodefony/node_modules/.bin/pm2",
    "start": "node src/nodefony/bin/nodefony start",
    "dev": "node --trace-deprecation src/nodefony/bin/nodefony dev",
    "outdated": "npm outdated --deph=0",
    "build": "node src/nodefony/bin/nodefony build",
    "test": "node src/nodefony/bin/nodefony unitest:launch:all",
    "publish": "bash bin/publish.sh",
    "certificates": "bash bin/generateCertificates.sh",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "dev-deploy": "bash bin/dev-deploy.sh",
    "prod-deploy": "bash bin/prod-deploy.sh",
    "lint": "eslint ."
  },
  "private": true,
  "bin": {
    "nodefony": "src/nodefony/bin/nodefony"
  },
  "keywords": [
    "nodefony",
    "node.js",
    "node",
    "framework",
    "webpack",
    "websocket",
    "realtime"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nodefony/nodefony.git"
  },
  "bugs": {
    "url": "https://github.com/nodefony/help/issues"
  },
  "licenses": [
    {
      "type": "CECILL-B",
      "url": "http://www.cecill.info/licences/Licence_CeCILL-B_V1-en.html"
    }
  ],
  "os": [
    "darwin",
    "linux",
    "freebsd",
    "win32"
  ],
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "graphql": "^16.10.0",
    "mongoose": "^8.9.3",
    "pm2": "^5.4.3",
    "pm2-logrotate": "2.7.0",
    "sequelize": "^6.37.5",
    "webpack": "^5.97.1",
    "webpack-dev-server": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@mapbox/node-pre-gyp": "1.0.11",
    "conventional-changelog-cli": "5.0.0",
    "eslint": "^9.17.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-markdown": "5.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vue": "^9.32.0",
    "markdown-eslint-parser": "1.2.1",
    "node-gyp": "^11.0.0",
    "vue-eslint-parser": "9.4.3"
  },
  "author": "Christophe CAMENSULI <ccamensuli@gmail.com>",
  "readmeFilename": "README.md"
}
