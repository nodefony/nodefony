{% extends "./layout.html.twig" %}
{% block content %}
	<div class="container">
		<div class="row">
			<div class="panel panel-default">
				<!-- Default panel contents -->
				<div class="panel-heading"><strong>SYSYTEM ROUTING    </strong>{{kernel.name|upper}}</div>
				<div class="panel-body">
					<p>Details all routes in framework</p>
				</div>
				<div class="table-responsive" >
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>ROUTE NAME</th>
								<th>PATH</th>
								<th>VARIABLES</th>
								<th>HOST</th>
								<th>CONTROLLER ACTION</th>
								<th>PATTERN</th>
								<th>FIRST MATCH</th>
							</tr>
						</thead>
						<tbody>
						{% for route in routes %}
							<tr>
								<td>{{route.name}}</td>
								<td>{{route.path}}</td>
								<td>{{route.variables}}</td>
								<td>{{route.host}}</td>
								<td>{{route.defaults.controller}}</td>
								<td>{{route.pattern}}</td>
								<td>{{route.firstMatch}}</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="row">

			<div class="panel panel-default">
				<!-- Default panel contents -->
				<div class="panel-heading"><strong>SYSYTEM SERVICES    </strong>{{kernel.name|upper}}</div>
				<div class="panel-body">
					<p>Details all services in framework</p>
				</div>
				<div class="table-responsive" >
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>NAME</th>
								<th>INSTANCE BY</th>
								<th>SCOPE</th>
								<th>CALLS AFTER INSTANCE</th>
								<th>INJECTIONS</th>
								<th>ORDER INJECTIONS</th>
								<th>PROPERTIES</th>
								
							</tr>
						</thead>
						<tbody>
						{% for service in services %}
							<tr>
								<td>{{service.name}}</td>
								<td>{{service.run}}</td>
								<td>{{service.scope}}</td>
								<td>{{service.calls}}</td>
								<td>{{service.injections}}</td>
								<td>{{service.orderInjections}}</td>
								<td>{{service.properties}}</td>
								
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
