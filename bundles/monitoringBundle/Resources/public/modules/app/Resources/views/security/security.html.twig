{% include '../blocks/title.html.twig' with { 'title': 'NODEFONY SECURITY ', 'subtitle': 'FIREWALL Nodefony framework ' } %}


<div class="container-fluid">

	<div class="row m-t-10">

		<div class="col-md-3 ">
			<ul id="myNav" class="nav nav-list ">
				<li class="active" ><a  data-target="#config" data-toggle="tab" >Configuration</a></li>
				<li><a data-target="#areas"  data-toggle="tab"  > Areas</a></li>	
				<li><a data-target="#auth"  data-toggle="tab"  > Authentications</a></li>	
			</ul>
		</div >

		<div class="col-md-9 " >
			<div class="tab-content">
				<div id="config" class="tab-pane active ">
					<div class=" m-t-10">
						<div class="row">
							<div class="col-md-3">
								<a class="block panel bg-info text-center wrapper">
									<div  class=" text-white font-thin no-m"><label >FIREWALL AREAS</label></div>
                                					<h4  class="rounded bg-success text-xs">{{ security.securedAreas | length }}</h4>
                                					<h4  class="rounded bg-success text-xs">{{}}</h4>
                        					</a>
							</div>	
							<div class="col-md-3">
								<a class="block panel bg-info text-center wrapper">
									<div  class=" text-white font-thin no-m"><label >SESSION STRATEGY</label></div>
                                					<h4  class="rounded bg-success text-xs">{{security.sessionStrategy}}</h4>
                        					</a>
							</div>
							<div class="col-md-3">
								<a class="block panel bg-info text-center wrapper">
									<div  class=" text-white font-thin no-m"><label >PROVIDERS AUTHENTICATION</label></div>
                                					<h4  class="rounded bg-success text-xs">{{security.providers | length }}</h4>
                        					</a>
							</div>
							<div class="col-md-3">
								<a class="block panel bg-info text-center wrapper">
									<div  class=" text-white font-thin no-m"><label >FACTORIES AUTHENTICATION</label></div>
                                					<h4  class="rounded bg-success text-xs">{{security.factories | length }} </h4>
                        					</a>
							</div>
						</div >
					</div >
				</div >

				<div id="areas" class="tab-pane">
					<h3> Details Firewall Areas </h3>
					<div class="wrapper" >
						<div class="table-responsive"  >
							{% for ele, key in security.securedAreas %}
								<h3> {{ele}} </h3>
								<table class="table table-striped table-bordered">
									<tbody>
										{% for a, b in key %}
										<tr>
											<td>{{a}}</td>
											<td>{{b}}</td>
										</tr>
										{% endfor %}
									</tbody>
								</table>	
							{% endfor %}
						</div>
					</div>
				</div >

				<div id="auth" class="tab-pane">
					<h3> FACTORIES </h3>
					<div class="wrapper" >
						<div class="table-responsive"  >
							<table class="table table-striped table-bordered">
								<tbody>
									{% for  key in security.factories %}
										<tr>
											<td>{{key}}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>	
						</div>
					</div>
					<h3> PROVIDERS </h3>
					<div class="wrapper" >
						<div class="table-responsive"  >
							{% for  key in security.providers %}
								<h3> {{key.name}} </h3>
								<table class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>NAME</th>
											<th>TYPE</th>
										</tr>
									</thead>	
									<tbody>
										<tr>
											<td>{{key.name}}</td>
											<td>{{key.type}}</td>
										</tr>
									</tbody>
								</table>	
							{% endfor %}
						</div>
					</div>
				</div >
			</div >
		</div >
	</div >
</div >





